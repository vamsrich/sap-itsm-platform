{
  "name": "sap-itsm-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Production-grade multi-tenant SAP ITSM Service Desk Platform",
  "scripts": {
    "install:all":    "npm install --prefix backend && npm install --prefix frontend",
    "dev:backend":    "npm run dev --prefix backend",
    "dev:frontend":   "npm run dev --prefix frontend",
    "build:backend":  "npm run build --prefix backend",
    "build:frontend": "npm run build --prefix frontend",
    "db:migrate":     "npm run db:migrate --prefix backend",
    "db:seed":        "npm run db:seed --prefix backend",
    "db:generate":    "npm run db:generate --prefix backend",
    "db:studio":      "npm run db:studio --prefix backend",
    "docker:up":      "docker compose up -d",
    "docker:down":    "docker compose down",
    "docker:build":   "docker compose build",
    "docker:migrate": "docker compose --profile migrate run migrate",
    "docker:logs":    "docker compose logs -f",
    "docker:reset":   "docker compose down -v && docker compose up -d"
  }
}
